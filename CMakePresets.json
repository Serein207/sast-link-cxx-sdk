{
    "version": 8,
    "configurePresets": [
        {
            "name": "C++ Debug",
            "displayName": "C++ Debug",
            "description": "Configure for C++ Debug build",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install"
            }
        },
        {
            "name": "C++ Release",
            "displayName": "C++ Release",
            "description": "Configure for C++ Release build",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install"
            }
        }
    ]
}